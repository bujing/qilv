/* components/userinfo/index.wxss */
.userinfo {
  align-items: center;
  border-bottom: 1rpx solid #d8d8d8;
  display: flex;
  height: 112rpx;
  padding: 0 32rpx;
}

.avatar {
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
}
.iconfont_weixin {
  background-color: transparent;
  color: #999;
  font-size: 80rpx;
  line-height: 80rpx;
  padding: 0;
}
.iconfont_weixin::after {
  border: none;
}

.nickname {
  flex: 1;
  font-size: 36rpx;
  margin: 0 32rpx;
}

.login-btn::after {
  border: none;
}