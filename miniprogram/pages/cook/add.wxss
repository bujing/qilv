/* miniprogram/pages/cook/add.wxss */
page {
  box-sizing: border-box;
  height: 100%;
  padding: 20rpx 40rpx 128rpx;
}

.container {
  height: 100%;
}

.type {
  margin-bottom: 20rpx;
}

.item {
  line-height: 48rpx;
  margin: 6rpx 0;
}

.input {
  height: 48rpx;
  line-height: 48rpx;
  min-height: 48rpx;
}

.editor {
  margin-top: 10rpx;
  overflow-y: auto;
}
.editor editor {
  box-shadow: inset 0 0 16rpx #ccc;
  border-radius: 8rpx;
  height: 100%;
  padding: 16rpx;
}